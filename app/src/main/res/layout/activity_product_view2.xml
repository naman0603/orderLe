<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProductViewActivity2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frameLayout"
            android:background="@color/light_pink"
            android:layout_margin="16dp"
            style="@style/rounded_corner"
            >

            <com.example.orderleapp.adapter.CustomViewPager
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"
                app:shapeAppearanceOverlay="@style/rounded_corner"
                />
        </FrameLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frameLayout"
        android:backgroundTint="@color/light_pink"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        android:id="@+id/cardView"
        android:layout_margin="16dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:gravity="start"
                        android:fontFamily="@font/avenir_heavy"
                        />

                    <TextView
                        android:id="@+id/txtClientName"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp"
                         android:fontFamily="@font/avenir_light"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:gravity="start"
                        android:fontFamily="@font/avenir_heavy"
                        />

                    <TextView
                        android:id="@+id/txtCategory"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/avenir_light"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:gravity="start"
                        android:fontFamily="@font/avenir_heavy"

                        />

                    <TextView
                        android:id="@+id/txtDescription"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/avenir_light"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:gravity="start"
                        android:fontFamily="@font/avenir_heavy"

                        />

                    <TextView
                        android:id="@+id/txtWeight"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/avenir_light"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    >
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Stone Charges"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:gravity="start"
                        android:fontFamily="@font/avenir_heavy"

                        />

                    <TextView
                        android:id="@+id/txtCharges"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/avenir_light"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:gravity="start"
                        android:fontFamily="@font/avenir_heavy"

                        />

                    <RelativeLayout
                        android:id="@+id/txt"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="10dp"
                        >

                        <TextView
                            android:id="@+id/txtCounter"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="@drawable/edittext_background"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/add"
                            android:layout_marginLeft="18dp"
                            android:layout_toEndOf="@id/txtCounter"
                            android:src="@drawable/ic_add_button"
                            android:layout_centerVertical="true"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sub"
                            android:layout_marginLeft="12dp"
                            android:layout_toEndOf="@id/add"
                            android:src="@drawable/ic_sub"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddToCart"
        android:hint="Add To Cart"
        android:background="@drawable/btn_bg"
        android:textAlignment="center"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="25dp"
        android:textColorHint="@color/white"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/avenir_heavy"
        android:layout_alignParentBottom="true"
        />
    </RelativeLayout>
</FrameLayout>