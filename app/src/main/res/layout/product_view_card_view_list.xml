<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="12dp"
    android:id="@+id/cardView"
    android:layout_margin="6dp"
    android:backgroundTint="@color/light_pink"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewListView"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:src="@mipmap/ic_launcher"
            android:layout_height="145dp"
            android:scaleType="fitXY"
            android:padding="8dp"
            app:shapeAppearanceOverlay="@style/rounded_corner"/>
        <LinearLayout
            android:layout_weight="1.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtItemNameListView"
                android:hint="Client Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="14dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtWeightListView"
                android:hint="Client Name"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtChargeListView"
                android:hint="Client Name"
                android:textSize="14sp"
                />

            <RelativeLayout
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingVertical="6dp"
                android:paddingEnd="6dp"
                >
                <TextView
                    android:id="@+id/txtCounterListView"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/edittext_background"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addListView"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/txtCounterListView"
                    android:src="@drawable/ic_add_button"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/subListView"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/addListView"
                    android:src="@drawable/ic_sub"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="ADD TO CART"
                android:textSize="16sp"
                android:layout_marginVertical="6dp"
                app:cornerRadius="6dp"
                android:backgroundTint="@color/pink"
                android:id="@+id/btnAddToCartListView"
                android:layout_marginEnd="16dp"
                android:padding="6dp"
                />


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>